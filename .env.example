# ============================================================
# Frontend Environment Variables (Vite)
# ============================================================

# Supabase project URL and anonymous key
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Inbound email address for Postmark forwarding
VITE_INBOUND_EMAIL=your_inbound_email_here

# Set to "true" for demo/GitHub Pages mode (uses mock data provider)
# VITE_IS_DEMO=false

# ============================================================
# Supabase Edge Function Environment Variables
# Place these in supabase/functions/.env.development for local dev
# and in Supabase Dashboard > Edge Functions > Secrets for production
# ============================================================

# Supabase (auto-set in production, required for local dev)
SUPABASE_URL=http://127.0.0.1:54321
SUPABASE_ANON_KEY=your_local_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# Anthropic (AI Chat Agent)
ANTHROPIC_API_KEY=sk-ant-...

# OpenAI (Knowledge Base Embeddings)
OPENAI_API_KEY=sk-...

# Google OAuth (Gmail Integration)
GOOGLE_OAUTH_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_OAUTH_CLIENT_SECRET=your_google_client_secret

# Google Maps (Discovery Agent)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Cal.com (Video Call Booking)
CALCOM_API_KEY=cal_live_...
CALCOM_EVENT_TYPE_ID=4777077
# CALCOM_BASE_URL=https://api.cal.com/v1
# CALCOM_LANGUAGE=it
# CALCOM_TIMEZONE=Europe/Rome

# WhatsApp Business (Meta Cloud API)
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token
WHATSAPP_VERIFY_TOKEN=your_webhook_verify_token
# WHATSAPP_TEMPLATE_LANG=it

# Twilio (SMS)
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_FROM_NUMBER=+1234567890

# Postmark (Inbound Email Webhook)
POSTMARK_WEBHOOK_USER=your_webhook_user
POSTMARK_WEBHOOK_PASSWORD=your_webhook_password
# POSTMARK_WEBHOOK_AUTHORIZED_IPS=

# Frontend URL (for OAuth redirects)
FRONTEND_URL=http://localhost:5173
